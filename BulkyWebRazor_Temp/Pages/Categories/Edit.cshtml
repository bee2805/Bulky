@page
@model BulkyWebRazor_Temp.Pages.Categories.EditModel

<form method="post" class=" border mt-5 p-5">
    <input asp-for="Category.Id" hidden />
    <div class="row pb-2">
        <h2 class="text-primary">Edit Category</h2>
        <hr class="mb-5" />
    </div>
    @*<div asp-validation-summary="None" class="text-danger mb-5"></div>*@
    <div class="mb-3">
        <label asp-for="Category.Name"></label>
        <input asp-for="Category.Name" class="form-control" />
        <span asp-validation-for="Category.Name" class="text-danger text-small"></span>
    </div>
    <div class="mb-5">
        <label asp-for="Category.DisplayOrder"></label>
        <input asp-for="Category.DisplayOrder" class="form-control" />
        <span asp-validation-for="Category.DisplayOrder" class="text-danger text-small"></span>
    </div>
    <button type="submit" class="btn btn-primary border">Update</button>
    <a asp-page="/categories/index" class="btn btn-secondary border">Back to List</a>
</form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}

