@model Product

<div class="card shadow border-0 mt-4">
    <div class="card-header ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-primary py-2">Delete Product</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-5">
        <form method="post">
            <input asp-for="Id" hidden />
            <div class="mb-5">
                <label asp-for="Title"></label>
                <input asp-for="Title" class="form-control" disabled />
            </div>

            <div class="mb-5">
                <label asp-for="Description"></label>
                <input asp-for="Description" class="form-control" disabled />
            </div>

            <div class="mb-5">
                <label asp-for="ISBN"></label>
                <input asp-for="ISBN" class="form-control" disabled />
            </div>

            <div class="mb-5">
                <label asp-for="Author"></label>
                <input asp-for="Author" class="form-control" disabled />
            </div>

            <div class="mb-5">
                <label asp-for="ListPrice"></label>
                <input asp-for="ListPrice" class="form-control" disabled />
            </div>

            <div class="mb-5">
                <label asp-for="Price"></label>
                <input asp-for="Price" class="form-control" disabled />
            </div>

            <div class="mb-5">
                <label asp-for="Price50"></label>
                <input asp-for="Price50" class="form-control" disabled />
            </div>

            <div class="mb-5">
                <label asp-for="Price100"></label>
                <input asp-for="Price100" class="form-control" disabled />
            </div>
            <button type="submit" class="btn btn-danger border">Delete</button>
            <a asp-controller="Product" asp-action="Index" class="btn btn-secondary border">Back to List</a>
        </form>
    </div>
</div>



@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}