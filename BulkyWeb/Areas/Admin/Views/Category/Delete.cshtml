@model Category

<div class="card shadow border-0 mt-4">
    <div class="card-header ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-primary py-2">Delete Category</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-5">
        <form method="post">
            <input asp-for="Id" hidden />
            <div class="mb-3">
                <label asp-for="Name"></label>
                <input asp-for="Name" class="form-control" disabled />
            </div>
            <div class="mb-5">
                <label asp-for="DisplayOrder"></label>
                <input asp-for="DisplayOrder" class="form-control" disabled />
            </div>
            <button type="submit" class="btn btn-danger border">Delete</button>
            <a asp-controller="Category" asp-action="Index" class="btn btn-secondary border">Back to List</a>
        </form>
    </div>
</div>



@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}