@model Category

<form method="post" class=" border mt-5">
    <div class="row pb-2">
        <h2 class="text-primary">Create Category</h2>
        <hr class="mb-5"/>
    </div>
    <div class="mb-3">
        <label class="p-0">Category Name</label>
        <input class="form-control" />
    </div>
    <div class="mb-5">
        <label class="p-0">Display Order</label>
        <input class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary border">Create</button>
    <a asp-controller="Category" asp-action="Index"class="btn btn-secondary border">Back to List</a>
</form>